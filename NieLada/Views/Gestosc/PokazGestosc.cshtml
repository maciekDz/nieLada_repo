@model IEnumerable<NieLada.Models.Gestosc>

@{
    ViewBag.Title = "PokazGestosc";
}

<style>
    .TblImg {
        max-height: 120px;
        width: auto;
    }
</style>

<h2>Nasze Gęstości</h2>

<p>
    @Html.ActionLink("Dodaj gęstość", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numer)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @{
                if (item.Numer == 0)
                {
                    @:Nowa Wielkość
                }
                else
                {
                    @:Nr: @Html.DisplayFor(modelItem => item.Numer) / @ViewBag.IloscGestosci
                }
            }
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            <img class="TblImg" src="@item.ZdjecieUrl" alt="Image" />
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Powrót", "Index", "Home", new { area = "" }, new { @class = "btn btn-default" })
</div>